    .ndc-app {
        min-height: 100vh;
        background: linear-gradient(135deg, #0A2342 0%, #1a3a5c 100%);
        color: #FFFFFF;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .ndc-header {
        background: rgba(255, 180, 0, 0.1);
        border-bottom: 2px solid #FFB400;
        padding: 1rem 0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .brand-text {
        font-size: 1.5rem;
        font-weight: bold;
        color: #FFB400;
    }

    .preview-badge {
        background: #dc3545;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: bold;
    }

    .navbar-nav {
        display: flex;
        gap: 1rem;
    }

    .nav-link {
        color: #FFFFFF;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.2s;
    }

    .nav-link:hover {
        background: rgba(255, 180, 0, 0.2);
        color: #FFB400;
    }

    .mobile-setup-link {
        background: rgba(40, 167, 69, 0.2);
        border: 1px solid #28a745;
        color: #28a745 !important;
    }

    .mobile-setup-link:hover {
        background: rgba(40, 167, 69, 0.3);
        color: #fff !important;
    }

    .ndc-main {
        flex: 1;
        padding: 2rem 0;
    }

    .ndc-footer {
        background: rgba(0, 0, 0, 0.2);
        border-top: 1px solid rgba(255, 180, 0, 0.3);
        padding: 1rem 0;
        text-align: center;
    }

