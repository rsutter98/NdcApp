@inherits LayoutComponentBase
@using NdcApp.Core.Services

<div class="ndc-app">
    <header class="ndc-header">
        <div class="container">
            <nav class="navbar">
                <div class="navbar-brand">
                    <img src="images/dotnet_bot.svg" alt="NDC" height="40" />
                    <span class="brand-text">NDC Conference Planner</span>
                    <span class="preview-badge">PREVIEW</span>
                </div>
                <div class="navbar-nav">
                    <a href="/" class="nav-link">Home</a>
                    <a href="/conference-plan" class="nav-link">My Plan</a>
                    <a href="/status" class="nav-link mobile-setup-link">
                        <i class="fas fa-mobile-alt"></i> iPhone Setup
                    </a>
                </div>
            </nav>
        </div>
    </header>
    
    <main class="ndc-main">
        @Body
    </main>
    
    <footer class="ndc-footer">
        <div class="container">
            <p>&copy; 2025 NDC Conference Planner - Web Preview</p>
            <p><small>This is a web preview of the MAUI app functionality for demonstration purposes.</small></p>
        </div>
    </footer>
</div>

